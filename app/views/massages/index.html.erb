<p id="notice"><%= notice %></p>

<h1>留言板</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @massages.each do |massage| %>
      <tr>
        <td><%= massage.name %></td>
        <td><%= massage.content %></td>
        <td><%= link_to '顯示留言', massage %></td>
        <td><%= link_to '編輯留言', edit_massage_path(massage) %></td>
        <td><%= link_to '刪除留言', massage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

